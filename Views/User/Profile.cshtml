@model ApplicationUser
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "Mon Profil";
    var userRoles = await UserManager.GetRolesAsync(Model);
    var isCandidat = userRoles.Contains("Candidat");
    var isRecruteur = userRoles.Contains("Recruteur");
}

<div class="profile-container">
    <div class="profile-header">
        <div class="profile-cover"></div>
        <div class="profile-avatar-container">
            @if (isRecruteur && !string.IsNullOrEmpty(Model.EntrepriseLogo))
            {
                <img src="@Url.Content($"~/img/{Model.EntrepriseLogo}")" alt="Logo" class="profile-avatar company-logo" />
            }
            else
            {
                var randomAvatarUrl = "https://randomuser.me/api/portraits/men/" + new Random().Next(1, 100) + ".jpg";
                <img src="@randomAvatarUrl" alt="avatar" class="profile-avatar" />
            }
        </div>
        <div class="profile-header-info">
            <h1>@Model.Nom @Model.Prenom</h1>
            @if (isCandidat)
            {
                <p class="profile-title">@Model.Titre</p>
                <p class="profile-subtitle">@Model.Diplome</p>
            }
            @if (isRecruteur)
            {
                <p class="profile-title">Recruteur</p>
                <p class="profile-subtitle">@Model.Entreprise</p>
            }
        </div>
    </div>

    <div class="profile-content">
        <div class="profile-sidebar">
            @if (isCandidat && !string.IsNullOrEmpty(Model.CV))
            {
                <div class="profile-card">
                    <div class="card-header">
                        <i class="fas fa-file-alt"></i>
                        <h3>CV</h3>
                    </div>
                    @{
                        var cvUrl = "/CVs/" + Model.CV;
                        if (!Model.CV.EndsWith(".pdf"))
                        {
                            cvUrl += ".pdf";
                        }
                    }
                    <a href="@cvUrl" class="cv-button" target="_blank">
                        <i class="fas fa-eye"></i>
                        <span>Consulter le CV</span>
                    </a>
                </div>
            }

            <div class="profile-card">
                <div class="card-header">
                    <i class="fas fa-address-card"></i>
                    <h3>Contact</h3>
                </div>
                <div class="contact-info">
                    <div class="contact-item">
                        <i class="fas fa-envelope"></i>
                        <span>@Model.Email</span>
                    </div>
                    <div class="contact-item">
                        <i class="fas fa-phone"></i>
                        <span>@Model.PhoneNumber</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="profile-main">
            <div class="profile-card">
                <div class="card-header">
                    <i class="fas fa-user"></i>
                    <h3>Informations personnelles</h3>
                </div>
                <div class="info-grid">
                    <div class="info-item">
                        <label>Âge</label>
                        <span>@Model.Age ans</span>
                    </div>

                    @if (isCandidat)
                    {
                        <div class="info-item">
                            <label>Diplôme</label>
                            <span>@Model.Diplome</span>
                        </div>
                        <div class="info-item">
                            <label>Expérience</label>
                            <span>@Model.NbAnsExp ans</span>
                        </div>
                        @if (Model.Profil != null)
                        {
                            <div class="info-item">
                                <label>Profil</label>
                                <span>@Model.Profil</span>
                            </div>
                        }
                    }

                    @if (isRecruteur)
                    {
                        <div class="info-item">
                            <label>Entreprise</label>
                            <span>@Model.Entreprise</span>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    :root {
        --primary-color: #60a5fa;
        --secondary-color: #9ca3af;
        --bg-primary: #111827;
        --bg-secondary: #1f2937;
        --bg-accent: #374151;
        --text-primary: #f3f4f6;
        --text-secondary: #d1d5db;
        --success-color: #34d399;
        --card-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.2), 0 2px 4px -1px rgba(0, 0, 0, 0.1);
        --card-border: 1px solid #374151;
    }

    body {
        background-color: var(--bg-primary);
        color: var(--text-primary);
    }

    .profile-container {
        max-width: 1200px;
        margin: 2rem auto;
        padding: 0 1rem;
    }

    .profile-header {
        position: relative;
        background: var(--bg-secondary);
        border-radius: 1rem;
        overflow: hidden;
        box-shadow: var(--card-shadow);
        border: var(--card-border);
        margin-bottom: 2rem;
    }

    .profile-cover {
        height: 200px;
        background: linear-gradient(135deg, #3b82f6, #1d4ed8);
        opacity: 0.8;
    }

    .profile-avatar-container {
        position: absolute;
        left: 2rem;
        bottom: 2rem;
    }

    .profile-avatar {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        border: 4px solid var(--bg-secondary);
        box-shadow: var(--card-shadow);
        object-fit: cover;
    }

    .company-logo {
        width: 120px;
        height: 120px;
        border-radius: 1rem;
        object-fit: contain;
        background: var(--bg-accent);
        padding: 0.5rem;
    }

    .profile-header-info {
        padding: 2rem 2rem 2rem 200px;
    }

        .profile-header-info h1 {
            font-size: 2rem;
            font-weight: 600;
            color: var(--text-primary);
            margin: 0;
        }

    .profile-title {
        font-size: 1.25rem;
        color: var(--primary-color);
        margin: 0.5rem 0;
    }

    .profile-subtitle {
        color: var(--text-secondary);
        margin: 0;
    }

    .profile-content {
        display: grid;
        grid-template-columns: 300px 1fr;
        gap: 2rem;
    }

    .profile-card {
        background: var(--bg-secondary);
        border-radius: 1rem;
        overflow: hidden;
        box-shadow: var(--card-shadow);
        border: var(--card-border);
        margin-bottom: 1.5rem;
    }

    .card-header {
        display: flex;
        align-items: center;
        padding: 1.5rem;
        background: var(--bg-accent);
        border-bottom: var(--card-border);
    }

        .card-header i {
            font-size: 1.25rem;
            color: var(--primary-color);
            margin-right: 0.75rem;
        }

        .card-header h3 {
            font-size: 1.25rem;
            font-weight: 600;
            margin: 0;
            color: var(--text-primary);
        }

    .contact-info {
        padding: 1.5rem;
    }

    .contact-item {
        display: flex;
        align-items: center;
        margin-bottom: 1rem;
        color: var(--text-secondary);
    }

        .contact-item:last-child {
            margin-bottom: 0;
        }

        .contact-item i {
            width: 24px;
            color: var(--primary-color);
            margin-right: 0.75rem;
        }

    .info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1.5rem;
        padding: 1.5rem;
    }

    .info-item {
        display: flex;
        flex-direction: column;
    }

        .info-item label {
            font-size: 0.875rem;
            font-weight: 500;
            color: var(--text-secondary);
            margin-bottom: 0.5rem;
        }

        .info-item span {
            font-size: 1rem;
            color: var(--text-primary);
        }

    .cv-button {
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 1.5rem;
        padding: 0.75rem 1.5rem;
        background: var(--primary-color);
        color: var(--bg-primary);
        border-radius: 0.5rem;
        text-decoration: none;
        transition: all 0.2s;
        font-weight: 500;
    }

        .cv-button:hover {
            background-color: #3b82f6;
            transform: translateY(-1px);
        }

        .cv-button i {
            margin-right: 0.5rem;
        }

    /* Effet de hover sur les cartes */
    .profile-card {
        transition: transform 0.2s;
    }

        .profile-card:hover {
            transform: translateY(-2px);
        }

   

   
    .profile-container {
        animation: fadeIn 0.5s ease-out;
    }
</style>