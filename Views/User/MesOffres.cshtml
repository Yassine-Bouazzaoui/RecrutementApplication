@model IEnumerable<RecrutementApplication.Models.Offre>

@{
    ViewData["Title"] = "Mes Offres";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-briefcase"></i> Mes Offres</h1>
        <a href="@Url.Action("CreateOffre", "User")" class="btn btn-primary">
            <i class="fas fa-plus"></i> Créer une nouvelle offre
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info" role="alert">
            <i class="fas fa-info-circle"></i> Vous n'avez pas encore publié d'offres.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var offre in Model)
            {
                <div class="col-md-6 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                @if (!string.IsNullOrEmpty(offre.EntrepriseLogo))
                                {
                                    <img src="@Url.Content($"~/img/{offre.EntrepriseLogo}")" alt="Logo" class="me-3" style="width: 50px; height: 50px; object-fit: contain;" />
                                }
                                <h5 class="card-title mb-0">@offre.Poste</h5>
                            </div>

                            <div class="mb-3">
                                <span class="badge bg-primary me-2">@offre.Type</span>
                                <span class="badge bg-secondary me-2">@offre.Profil</span>
                                <span class="badge bg-info">@offre.Secteur</span>
                            </div>

                            <p class="card-text mb-2">
                                <i class="fas fa-map-marker-alt text-muted me-2"></i>@offre.Location
                            </p>
                            <p class="card-text mb-2">
                                <i class="fas fa-money-bill-wave text-muted me-2"></i>@offre.Remuneration
                            </p>

                            <div class="text-muted small mb-3">
                                <div><i class="far fa-calendar-alt me-2"></i>Publié le : @offre.DatePub.ToShortDateString()</div>
                                <div><i class="fas fa-hourglass-end me-2"></i>Date limite : @offre.DeadLine.ToShortDateString()</div>
                            </div>

                            <div class="card-text mb-3" style="max-height: 100px; overflow: hidden;">
                                @offre.Description
                            </div>
                        </div>

                        <div class="card-footer bg-white border-top-0">
                            <div class="d-flex justify-content-between align-items-center">
                                <a href="@Url.Action("DetailsOffre", "User", new { id = offre.Id })" class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-eye"></i> Détails
                                </a>
                                <div>
                                    <a href="@Url.Action("EditOffre", "User", new { id = offre.Id })" class="btn btn-outline-secondary btn-sm me-2">
                                        <i class="fas fa-edit"></i> Modifier
                                    </a>
                                    <a href="@Url.Action("DeleteOffre", "User", new { id = offre.Id })" class="btn btn-outline-danger btn-sm">
                                        <i class="fas fa-trash"></i> Supprimer
                                    </a>
                                    <a href="@Url.Action("VoirCandidats", "User", new { offreId = offre.Id })" class="btn btn-outline-info btn-sm">
                                        <i class="fas fa-profile"></i> Voir Candidats
                                    </a>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="mt-4">
            <p class="text-muted">
                <i class="fas fa-info-circle"></i> Nombre total d'offres : @Model.Count()
            </p>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Ajouter une confirmation avant la suppression
        document.querySelectorAll('a[href*="Delete"]').forEach(link => {
            link.addEventListener('click', function(e) {
                if (!confirm('Êtes-vous sûr de vouloir supprimer cette offre ?')) {
                    e.preventDefault();
                }
            });
        });
    </script>
}