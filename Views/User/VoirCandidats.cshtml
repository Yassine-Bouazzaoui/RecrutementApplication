@model List<RecrutementApplication.Models.Candidature>
@{
    ViewData["Title"] = "Voir les Candidats";
}

<style>
    .candidates-container {
        background: linear-gradient(145deg, #1a1a1a, #2d2d2d);
        border-radius: 15px;
        padding: 2rem;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    }

    .page-header {
        background: linear-gradient(45deg, #3d7ad6, #2d5aa6);
        padding: 2rem;
        border-radius: 10px;
        margin-bottom: 2rem;
        box-shadow: 0 4px 15px rgba(61, 122, 214, 0.2);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .page-header:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 20px rgba(61, 122, 214, 0.3);
        }

    .candidate-card {
        background: rgba(45, 45, 45, 0.9);
        border-radius: 10px;
        margin-bottom: 1rem;
        transition: all 0.3s ease;
        border: 1px solid rgba(255, 255, 255, 0.1);
        opacity: 0;
        transform: translateY(20px);
    }

        .candidate-card.visible {
            opacity: 1;
            transform: translateY(0);
        }

        .candidate-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
            border-color: #3d7ad6;
        }

    .candidate-info {
        padding: 1.5rem;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .candidate-details {
        display: flex;
        align-items: center;
        gap: 1.5rem;
    }

    .avatar-placeholder {
        width: 50px;
        height: 50px;
        background: linear-gradient(45deg, #3d7ad6, #2d5aa6);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: bold;
        transition: transform 0.3s ease;
    }

        .avatar-placeholder:hover {
            transform: scale(1.1);
        }

    .contact-info {
        display: flex;
        gap: 1rem;
        align-items: center;
    }

    .contact-icon {
        color: #3d7ad6;
        transition: all 0.3s ease;
        padding: 8px;
        border-radius: 50%;
        background-color: rgba(61, 122, 214, 0.1);
    }

        .contact-icon:hover {
            color: white;
            background-color: #3d7ad6;
            transform: translateY(-3px);
        }

    .cv-button {
        background: linear-gradient(45deg, #3d7ad6, #2d5aa6);
        color: white;
        padding: 0.75rem 1.5rem;
        border-radius: 25px;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        transition: all 0.3s ease;
        border: none;
        font-weight: 500;
    }

        .cv-button:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(61, 122, 214, 0.3);
            color: white;
        }

    .empty-state {
        text-align: center;
        padding: 3rem;
        color: #bbbbbb;
        transition: opacity 0.3s ease;
    }

    .badge-status {
        padding: 0.5rem 1rem;
        border-radius: 15px;
        font-size: 0.85rem;
        transition: all 0.3s ease;
        background-color: rgba(61, 122, 214, 0.2);
    }

        .badge-status:hover {
            background-color: #3d7ad6;
            transform: scale(1.05);
        }
</style>

<div class="candidates-container">
    <div class="page-header">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="text-white mb-0">
                <i class="fas fa-users-gear me-2"></i>
                Liste des Candidats
            </h1>
            <span class="badge badge-status">
                <i class="fas fa-chart-line me-1"></i>
                @Model.Count candidature(s)
            </span>
        </div>
    </div>

    @if (Model.Count == 0)
    {
        <div class="empty-state">
            <i class="fas fa-folder-open fa-4x mb-3"></i>
            <h3>Aucune candidature</h3>
            <p class="text-muted">Il n'y a pas encore de candidatures pour cette offre.</p>
        </div>
    }
    else
    {
        <div class="candidates-list">
            @foreach (var candidature in Model)
            {
                <div class="candidate-card">
                    <div class="candidate-info">
                        <div class="candidate-details">
                            <div class="avatar-placeholder" title="Initiales du candidat">
                                @(candidature.Candidat.Prenom[0])@(candidature.Candidat.Nom[0])
                            </div>
                            <div>
                                <h5 class="mb-2">@candidature.Candidat.Prenom @candidature.Candidat.Nom</h5>
                                <div class="contact-info">
                                    <a href="mailto:@candidature.Candidat.Email" class="contact-icon" title="Envoyer un email">
                                        <i class="fas fa-envelope"></i>
                                    </a>
                                    <a href="tel:@candidature.Candidat.PhoneNumber" class="contact-icon" title="Appeler">
                                        <i class="fas fa-phone"></i>
                                    </a>
                                    <span class="text-muted small">
                                        <i class="fas fa-clock me-1"></i>
                                        Nouveau
                                    </span>
                                </div>
                            </div>
                        </div>

                        <div>
                            @{
                                var cvUrl = "/CVs/" + @candidature.Candidat.CV;
                                if (!@candidature.Candidat.CV.EndsWith(".pdf"))
                                {
                                    cvUrl += ".pdf";
                                }
                            }
                            <a href="@cvUrl" class="cv-button" target="_blank">
                                <i class="fas fa-file-pdf"></i>
                                Consulter le CV
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Affichage progressif des cartes
            const cards = document.querySelectorAll('.candidate-card');
            setTimeout(() => {
                cards.forEach((card, index) => {
                    setTimeout(() => {
                        card.classList.add('visible');
                    }, index * 100);
                });
            }, 100);

            // Effet de hover amélioré sur les boutons
            const buttons = document.querySelectorAll('.cv-button, .contact-icon');
            buttons.forEach(button => {
                button.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-3px)';
                });
                button.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0)';
                });
            });
        });
    </script>
}