<!-- CSS personnalisé à ajouter dans votre fichier de style -->
<style>
    .bg-primary {
        z-index: 1;
        pointer-events: none; /* Évite que cette superposition interfère */
    }

    .img-fluid {
        z-index: 2;
        position: relative; /* Garde l'image visible au-dessus de la superposition */
    }

    .py-6 {
        padding-top: 5rem;
        padding-bottom: 5rem;
    }

    .hover-lift {
        transition: transform 0.2s ease-in-out;
    }

        .hover-lift:hover {
            transform: translateY(-5px);
        }

    .icon-circle {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 1.5rem;
    }

    .transform-hover {
        transition: transform 0.3s ease-in-out;
    }

        .transform-hover:hover {
            transform: translateY(-10px);
        }

    .animate__animated {
        animation-duration: 1s;
    }

    .bg-gradient-dark {
        background: linear-gradient(135deg, #1a1a1a 0%, #343a40 100%);
    }

    .delay-1 {
        animation-delay: 0.2s;
    }

    .delay-2 {
        animation-delay: 0.4s;
    }

    .text-reveal {
        opacity: 0;
        transform: translateY(20px);
        animation: reveal 0.8s ease-in-out forwards;
    }

</style>
<script>
    // Animation des compteurs
    const counters = document.querySelectorAll('.counter');
    counters.forEach(counter => {
        const target = parseInt(counter.innerText);
        let count = 0;
        const duration = 2000;
        const increment = target / (duration / 16);

        const updateCount = () => {
            count += increment;
            if (count < target) {
                counter.innerText = Math.ceil(count);
                requestAnimationFrame(updateCount);
            } else {
                counter.innerText = target;
            }
        };

        // Démarrer l'animation lorsque l'élément est visible
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    updateCount();
                    observer.unobserve(entry.target);
                }
            });
        }, { threshold: 0.5 });

        observer.observe(counter);
    });

    // Animation des éléments au défilement
    const revealElements = document.querySelectorAll('.reveal-on-scroll');
    const revealObserver = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.classList.add('animate__animated', 'animate__fadeInUp');
                revealObserver.unobserve(entry.target);
            }
        });
    }, { threshold: 0.1 });

    revealElements.forEach(element => {
        revealObserver.observe(element);
    });

    // Effet de parallaxe pour l'image
    const parallaxImage = document.querySelector('.image-parallax');
    if (parallaxImage) {
        window.addEventListener('scroll', () => {
            const scrolled = window.pageYOffset;
            const rate = scrolled * 0.15;
            parallaxImage.style.transform = `translate3d(0, ${rate}px, 0)`;
        });
    }

    // Animation des boutons hover-lift
    const hoverButtons = document.querySelectorAll('.hover-lift');
    hoverButtons.forEach(button => {
        button.addEventListener('mouseover', () => {
            button.style.transform = 'translateY(-5px)';
            button.style.boxShadow = '0 10px 20px rgba(0,0,0,0.1)';
        });

        button.addEventListener('mouseout', () => {
            button.style.transform = 'translateY(0)';
            button.style.boxShadow = '0 4px 6px rgba(0,0,0,0.1)';
        });
    });

    // Smooth scroll pour les liens d'ancrage
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
            e.preventDefault();
            const target = document.querySelector(this.getAttribute('href'));
            if (target) {
                target.scrollIntoView({
                    behavior: 'smooth',
                    block: 'start'
                });
            }
        });
    });

    // Animation du texte reveal
    const textRevealElements = document.querySelectorAll('.text-reveal');
    const textRevealObserver = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.style.opacity = '1';
                entry.target.style.transform = 'translateY(0)';
                textRevealObserver.unobserve(entry.target);
            }
        });
    }, { threshold: 0.1 });

    textRevealElements.forEach(element => {
        textRevealObserver.observe(element);
    });
</script>
