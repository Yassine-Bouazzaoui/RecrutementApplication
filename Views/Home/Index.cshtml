<style>
    .bg-gradient-primary {
        background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
    }

    .transform-hover {
        transition: transform 0.3s ease;
    }

        .transform-hover:hover {
            transform: translateY(-10px);
        }

    .transform-scale-hover {
        transition: transform 0.3s ease;
    }

        .transform-scale-hover:hover {
            transform: scale(1.05);
        }

    .text-reveal {
        opacity: 0;
        transform: translateY(20px);
        transition: opacity 0.8s ease, transform 0.8s ease;
    }

        .text-reveal.is-visible {
            opacity: 1;
            transform: translateY(0);
        }

    .reveal-on-scroll {
        opacity: 0;
        transform: translateY(30px);
        transition: opacity 0.8s ease, transform 0.8s ease;
    }

        .reveal-on-scroll.is-visible {
            opacity: 1;
            transform: translateY(0);
        }

    .delay-1 {
        transition-delay: 0.2s;
    }

    .delay-2 {
        transition-delay: 0.4s;
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Text Reveal Animation
        const textReveals = document.querySelectorAll('.text-reveal');
        const scrollReveals = document.querySelectorAll('.reveal-on-scroll');
        const counters = document.querySelectorAll('.counter');

        const observerOptions = {
            threshold: 0.1
        };

        const revealObserver = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('is-visible');
                }
            });
        }, observerOptions);

        const counterObserver = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    const target = entry.target;
                    const count = parseInt(target.textContent);
                    let current = 0;

                    const updateCounter = () => {
                        if (current < count) {
                            current += Math.ceil(count / 50);
                            if (current > count) current = count;
                            target.textContent = current.toLocaleString();
                            requestAnimationFrame(updateCounter);
                        }
                    };

                    updateCounter();
                }
            });
        }, observerOptions);

        textReveals.forEach(reveal => revealObserver.observe(reveal));
        scrollReveals.forEach(reveal => revealObserver.observe(reveal));
        counters.forEach(counter => counterObserver.observe(counter));
    });
</script>