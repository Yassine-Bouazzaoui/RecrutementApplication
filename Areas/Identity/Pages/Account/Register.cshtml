@page
@model RegisterModel
@{
    ViewData["Title"] = "Inscription";
}

<div class="container-fluid py-5 bg-dark">
    <div class="container">
        <div class="text-center mb-5">
            <span class="badge bg-primary px-3 py-2 rounded-pill mb-3">
                <i class="bi bi-rocket-takeoff me-2"></i>Commencez Votre Voyage
            </span>
            <h2 class="display-4 fw-bold mb-3 text-light">Rejoignez Notre Communauté</h2>
            <p class="text-light-50">Choisissez votre parcours et commencez votre aventure professionnelle</p>
        </div>

        <!-- Role Selection Cards -->
        <div class="row justify-content-center g-4 mb-5">
            <!-- Candidat Card -->
            <div class="col-lg-5">
                <div class="card h-100 border-glow bg-dark-gradient text-white hover-scale role-card" id="candidatCard" tabindex="0" role="button">
                    <div class="card-body p-5 text-center">
                        <div class="icon-circle bg-primary bg-opacity-10 mx-auto mb-4">
                            <i class="bi bi-person-workspace display-5 text-primary"></i>
                        </div>
                        <h3 class="card-title h2 mb-4">Espace Candidat</h3>
                        <p class="card-text mb-4 text-light-50">Découvrez des opportunités exceptionnelles et construisez votre carrière idéale avec des entreprises innovantes.</p>
                        <span class="btn btn-outline-primary btn-lg rounded-pill px-4 glow-button">
                            <i class="bi bi-arrow-right-circle me-2"></i>Je suis Candidat
                        </span>
                        <div class="features mt-4">
                            <div class="d-flex align-items-center mb-3 feature-item">
                                <i class="bi bi-check-circle text-primary me-2"></i>
                                <span class="text-light-50">Accès à des offres exclusives</span>
                            </div>
                            <div class="d-flex align-items-center mb-3 feature-item">
                                <i class="bi bi-check-circle text-primary me-2"></i>
                                <span class="text-light-50">Suivi de candidatures</span>
                            </div>
                            <div class="d-flex align-items-center feature-item">
                                <i class="bi bi-check-circle text-primary me-2"></i>
                                <span class="text-light-50">Profil personnalisé</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recruteur Card -->
            <div class="col-lg-5">
                <div class="card h-100 border-glow bg-dark-gradient text-white hover-scale role-card" id="recruteurCard" tabindex="0" role="button">
                    <div class="card-body p-5 text-center">
                        <div class="icon-circle bg-success bg-opacity-10 mx-auto mb-4">
                            <i class="bi bi-building display-5 text-success"></i>
                        </div>
                        <h3 class="card-title h2 mb-4">Espace Recruteur</h3>
                        <p class="card-text mb-4 text-light-50">Trouvez les meilleurs talents pour développer votre entreprise et gérez vos recrutements efficacement.</p>
                        <span class="btn btn-outline-success btn-lg rounded-pill px-4 glow-button">
                            <i class="bi bi-arrow-right-circle me-2"></i>Je suis Recruteur
                        </span>
                        <div class="features mt-4">
                            <div class="d-flex align-items-center mb-3 feature-item">
                                <i class="bi bi-check-circle text-success me-2"></i>
                                <span class="text-light-50">Publication d'offres illimitée</span>
                            </div>
                            <div class="d-flex align-items-center mb-3 feature-item">
                                <i class="bi bi-check-circle text-success me-2"></i>
                                <span class="text-light-50">Gestion des candidatures</span>
                            </div>
                            <div class="d-flex align-items-center feature-item">
                                <i class="bi bi-check-circle text-success me-2"></i>
                                <span class="text-light-50">Analytics avancés</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-center">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>

        <!-- Form Section -->
        <div id="formSection" class="mt-5 d-none">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="card border-glow bg-dark-gradient">
                        <div class="card-body p-5">
                            <h3 id="formTitle" class="text-center h2 mb-5 text-light"></h3>
                            <form method="post" enctype="multipart/form-data">
                                <!-- Personal Information Section -->
                                <div class="mb-5">
                                    <h4 class="mb-4 text-light">Informations Personnelles</h4>
                                    <div class="row g-4">
                                        <div class="col-md-6">
                                            <div class="form-floating dark-input">
                                                <input asp-for="Input.Nom" class="form-control bg-dark text-light" placeholder="Nom" required />
                                                <label asp-for="Input.Nom" class="text-light-50">Nom</label>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-floating dark-input">
                                                <input asp-for="Input.Prenom" class="form-control bg-dark text-light" placeholder="Prénom" required />
                                                <label asp-for="Input.Prenom" class="text-light-50">Prénom</label>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-floating">
                                                <input asp-for="Input.Age" class="form-control bg-dark text-light" placeholder="Âge" required type="number" id="age" />
                                                <label asp-for="Input.Age" class="text-light-50">Âge</label>
                                            </div>
                                        </div>

                                        <div class="col-md-6">
                                            <div class="form-floating dark-input">
                                                <input asp-for="Input.Email" type="email" class="form-control bg-dark text-light" placeholder="Email" required />
                                                <label asp-for="Input.Email" class="text-light-50">Email</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- Security Section -->
                                <div class="mb-5">
                                    <h4 class="mb-4 text-light">Sécurité</h4>
                                    <div class="row g-4">
                                        <div class="col-md-6">
                                            <div class="form-floating dark-input">
                                                <input asp-for="Input.Password" class="form-control bg-dark text-light" type="password" placeholder="Mot de passe" />
                                                <label asp-for="Input.Password" class="text-light-50">Mot de passe</label>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-floating dark-input">
                                                <input asp-for="Input.ConfirmPassword" class="form-control bg-dark text-light" type="password" placeholder="Confirmer" />
                                                <label asp-for="Input.ConfirmPassword" class="text-light-50">Confirmer</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- Candidat Fields -->
                                <div id="candidatFields" class="d-none">
                                    <div class="mb-5">
                                        <h4 class="mb-4 text-light">Profil Professionnel</h4>
                                        <div class="row g-4">
                                            <div class="col-md-6">
                                                <div class="form-floating dark-input">
                                                    <input asp-for="Input.Titre" class="form-control bg-dark text-light" placeholder="Titre" />
                                                    <label asp-for="Input.Titre" class="text-light-50">Titre Professionnel</label>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-floating dark-input">
                                                    <input asp-for="Input.NbAnsExp" class="form-control bg-dark text-light" type="number" placeholder="Expérience" />
                                                    <label asp-for="Input.NbAnsExp" class="text-light-50">Années d'expérience</label>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-floating dark-input">
                                                    <input asp-for="Input.Diplome" class="form-control bg-dark text-light" placeholder="Diplôme" />
                                                    <label asp-for="Input.Diplome" class="text-light-50">Diplôme</label>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-floating dark-input">
                                                    <select asp-for="Input.Profil" class="form-select bg-dark text-light">
                                                        <option value="">Sélectionnez...</option>
                                                        <option value="Deug">Deug</option>
                                                        <option value="Licence">Licence</option>
                                                        <option value="Master">Master</option>
                                                        <option value="Ingenieur">Ingénieur</option>
                                                    </select>
                                                    <label for="Input.Profil" class="text-light-50">Niveau d'études</label>
                                                </div>
                                            </div>

                                            <div class="col-12">
                                                <div class="upload-zone p-4 rounded-3 bg-dark text-center cv-zone">
                                                    <i class="bi bi-cloud-upload display-4 text-primary mb-3"></i>
                                                    <h5 class="text-light">Déposez votre CV</h5>
                                                    <p class="text-muted small mb-3">Format PDF uniquement</p>
                                                    <input accept=".pdf" class="form-control bg-dark text-light border-0" type="file" name="file" />
                                                </div>
                                            </div>


                                        </div>
                                    </div>
                                </div>
                                <!-- Recruteur Fields -->
                                <div id="recruteurFields" class="d-none">
                                    <div class="mb-5">
                                        <h4 class="mb-4">Information Entreprise</h4>
                                        <div class="row g-4">
                                            <div class="col-12">
                                                <div class="form-floating">
                                                    <input asp-for="Input.Entreprise" class="form-control bg-dark text-light" placeholder="Entreprise" />
                                                    <label asp-for="Input.Entreprise">Nom de l'entreprise</label>
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <div class="upload-zone p-4 rounded-3 bg-dark text-center logo-zone">
                                                    <i class="bi bi-image display-4 text-success mb-3"></i>
                                                    <h5 class="text-light">Logo de l'entreprise</h5>
                                                    <p class="text-muted small mb-3">Formats acceptés : PNG, JPG</p>
                                                    <input accept=".png,.jpg,.jpeg" class="form-control bg-dark text-light border-0" type="file" name="file" />
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                                <input type="hidden" id="selectedRole" name="Input.Role" value="" />
                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary btn-lg rounded-pill px-5 glow-button">
                                        <i class="bi bi-check-circle me-2"></i>Créer mon compte
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<style>
    /* Variables pour le thème sombre */
    :root {
        --dark-bg: #121212;
        --dark-card: #1E1E1E;
        --dark-input: #2D2D2D;
        --text-light-50: rgba(255, 255, 255, 0.5);
        --glow-primary: rgba(13, 110, 253, 0.5);
        --glow-success: rgba(25, 135, 84, 0.5);
    }

    /* Reset des styles par défaut des form-floating */
    .form-floating {
        position: relative;
    }

        /* Styles de base pour les labels */
        .form-floating > label {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            padding: 1rem 0.75rem;
            overflow: hidden;
            text-align: start;
            text-overflow: ellipsis;
            white-space: nowrap;
            pointer-events: none;
            border: 1px solid transparent;
            transform-origin: 0 0;
            transition: opacity .1s ease-in-out, transform .1s ease-in-out;
            color: var(--text-light-50);
            background-color: transparent !important;
        }

        /* Animation du label lorsque le champ est focalisé ou rempli */
        .form-floating > .form-control:focus ~ label,
        .form-floating > .form-control:not(:placeholder-shown) ~ label,
        .form-floating > .form-select:focus ~ label,
        .form-floating > .form-select:not([value=""]) ~ label {
            opacity: 0.65;
            transform: scale(0.85) translateY(-0.5rem) translateX(0.15rem);
            background-color: transparent !important;
            padding-left: 0.75rem;
            padding-right: 0.75rem;
        }

        /* Styles pour les champs de formulaire */
        .form-floating > .form-control,
        .form-floating > .form-select {
            height: calc(3.5rem + 2px);
            padding: 1rem 0.75rem;
        }

    /* Ajustements spécifiques pour le thème sombre */
    .dark-input .form-control,
    .dark-input .form-select {
        background-color: var(--dark-input);
        color: #fff;
    }

        .dark-input .form-control:focus,
        .dark-input .form-select:focus {
            background-color: var(--dark-input);
            color: #fff;
        }

    /* Suppression de tout background indésirable */
    .form-floating > label::after {
        background-color: transparent !important;
        content: none !important;
    }

    body {
        background-color: var(--dark-bg);
        color: #fff;
    }

    .bg-dark {
        background-color: var(--dark-bg) !important;
    }

    .bg-dark-gradient {
        background: linear-gradient(145deg, var(--dark-card), var(--dark-bg));
    }

    .text-light-50 {
        color: var(--text-light-50) !important;
    }

    /* Styles pour les cartes */
    .card {
        background-color: var(--dark-card);
        border: none;
    }

    .border-glow {
        border: 1px solid rgba(255, 255, 255, 0.1);
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.5);
    }

    /* Styles pour les boutons */
    .glow-button {
        position: relative;
        overflow: hidden;
        transition: all 0.3s ease;
    }

        .glow-button:hover {
            transform: translateY(-2px);
            box-shadow: 0 0 15px var(--glow-primary);
        }

    .btn-outline-success.glow-button:hover {
        box-shadow: 0 0 15px var(--glow-success);
    }

    /* Styles pour les inputs */
    .dark-input .form-control {
        background-color: var(--dark-input);
        border: 1px solid rgba(255, 255, 255, 0.1);
        color: #fff;
    }

        .dark-input .form-control:focus {
            background-color: var(--dark-input);
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
            color: #fff;
        }

    .dark-input label {
        color: var(--text-light-50);
    }

    /* Effets de survol et animations */
    .hover-scale {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .hover-scale:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3);
        }

    .feature-item {
        transition: transform 0.3s ease;
        padding: 0.5rem;
        border-radius: 8px;
    }

        .feature-item:hover {
            transform: translateX(10px);
            background: rgba(255, 255, 255, 0.05);
        }

    /* Upload zone styles */
    .upload-zone {
        background-color: var(--dark-input);
        border: 2px dashed rgba(255, 255, 255, 0.1);
        transition: all 0.3s ease;
    }

        .upload-zone:hover {
            border-color: #0d6efd; /* Bleu pour la zone CV */
            background-color: rgba(13, 110, 253, 0.1); /* Bleu pour la zone CV */
        }

    /* Zone CV (bleu) */
    .cv-zone:hover {
        border-color: #0d6efd;
        background-color: rgba(13, 110, 253, 0.1);
    }

    /* Zone Logo (vert) */
    .logo-zone:hover {
        border-color: #198754; /* Vert pour la zone Logo */
        background-color: rgba(25, 135, 84, 0.1); /* Vert pour la zone Logo */
    }


    /* Icon circle styles */
    .icon-circle {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: transform 0.3s ease;
    }

        .icon-circle:hover {
            transform: scale(1.1);
        }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Le JavaScript reste identique car il gère uniquement la logique de bascule
        const candidatCard = document.getElementById('candidatCard');
        const recruteurCard = document.getElementById('recruteurCard');
        const formSection = document.getElementById('formSection');
        const formTitle = document.getElementById('formTitle');
        const candidatFields = document.getElementById('candidatFields');
        const recruteurFields = document.getElementById('recruteurFields');
        const selectedRole = document.getElementById('selectedRole');

        function toggleForm(role) {
            formSection.classList.remove('d-none');
            formTitle.textContent = role === 'Candidat' ? 'Inscription Candidat' : 'Inscription Recruteur';
            candidatFields.classList.toggle('d-none', role !== 'Candidat');
            recruteurFields.classList.toggle('d-none', role !== 'Recruteur');
            selectedRole.value = role;

            formSection.scrollIntoView({ behavior: 'smooth' });
        }

        candidatCard.addEventListener('click', () => toggleForm('Candidat'));
        recruteurCard.addEventListener('click', () => toggleForm('Recruteur'));

        // Accessibility
        candidatCard.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') toggleForm('Candidat');
        });
        recruteurCard.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') toggleForm('Recruteur');
        });
    </script>
}