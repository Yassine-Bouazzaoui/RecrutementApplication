@page
@model LoginModel

@{
    ViewData["Title"] = "Connexion";
}

<section class="vh-100 d-flex align-items-center justify-content-center login-section">
    <div class="container">
        <div class="row justify-content-center">
            <!-- Formulaire de connexion -->
            <div class="col-md-10 col-lg-8 col-xl-6">
                <div class="dark-card">
                    <div class="dark-card-header">
                        <div class="dark-card-icon">
                            <i class="fas fa-user-circle"></i>
                        </div>
                        <h2>@ViewData["Title"]</h2>
                        <p>Connectez-vous à votre compte</p>
                    </div>

                    <form id="account" method="post" class="dark-card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger alert alert-danger mb-4" role="alert"></div>

                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                <input asp-for="Input.Email"
                                       class="form-control"
                                       type="email"
                                       placeholder="Votre email"
                                       autocomplete="username"
                                       required />
                            </div>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                <input asp-for="Input.Password"
                                       class="form-control password-input"
                                       type="password"
                                       placeholder="Votre mot de passe"
                                       autocomplete="current-password"
                                       required />
                                <button type="button" class="btn btn-toggle-password" onclick="togglePassword(this)">
                                    <i class="fas fa-eye-slash"></i>
                                </button>
                            </div>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            <label asp-for="Input.RememberMe" class="form-check-label">
                                Se souvenir de moi
                            </label>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fas fa-sign-in-alt me-2"></i>Connexion
                        </button>

                        <div class="additional-links">
                            <a asp-page="./ForgotPassword" class="link">Mot de passe oublié ?</a>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="link">
                                Créer un compte
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function togglePassword(button) {
            const input = button.parentElement.querySelector('.password-input');
            const icon = button.querySelector('i');

            if (input.type === 'password') {
                input.type = 'text';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            } else {
                input.type = 'password';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            }
        }
    </script>
}

<style>
    :root {
        --bg-dark: #121212;
        --card-dark: #1E1E1E;
        --border-dark: #2C2C2C;
        --text-primary: #E0E0E0;
