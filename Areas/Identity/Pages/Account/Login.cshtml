@page
@model LoginModel

@{
    ViewData["Title"] = "Connexion";
}

<section class="vh-100 d-flex align-items-center justify-content-center">
    <div class="container">
        <div class="row justify-content-center">
            <!-- Formulaire de connexion -->
            <div class="col-md-10 col-lg-8 col-xl-6">
                <div class="card shadow-lg border-0 rounded-lg">
                    <div class="card-body p-4">
                        <h1 class="text-center mb-4 text-primary">@ViewData["Title"]</h1>
                        <form id="account" method="post">
                            <h2 class="h5 text-center text-muted mb-4">Utilisez un compte local pour vous connecter</h2>
                            <hr />
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                            <!-- Champ Email -->
                            <div class="form-floating mb-3">
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" required />
                                <label asp-for="Input.Email" class="form-label">Email</label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>

                            <!-- Champ Mot de passe -->
                            <div class="form-floating mb-3">
                                <input asp-for="Input.Password" type="password" class="form-control" autocomplete="current-password" placeholder="Mot de passe" required />
                                <label asp-for="Input.Password" class="form-label">Mot de passe</label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>

                            <!-- Rappel de mot de passe -->
                            <div class="form-check mb-3">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                <label asp-for="Input.RememberMe" class="form-check-label">Se souvenir de moi</label>
                            </div>

                            <!-- Bouton Connexion -->
                            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary mb-3">Se connecter</button>

                            <!-- Liens de récupération et d'inscription -->
                            <div class="text-center">
                                <a id="forgot-password" asp-page="./ForgotPassword" class="d-block mb-2 text-muted">Mot de passe oublié ?</a>
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="d-block mb-2 text-muted">Enregistrez-vous en tant que nouvel utilisateur</a>
                                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="d-block mb-2 text-muted">Renvoyer la confirmation par e-mail</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Connexion via services externes -->
            <div class="col-md-10 col-lg-8 col-xl-6 mt-4 mt-lg-0">
                <div class="card shadow-lg border-0 rounded-lg">
                    <div class="card-body p-4">
                        <h3 class="text-center mb-4 text-muted">Utilisez un autre service pour vous connecter</h3>
                        <hr />
                        @{
                            if ((Model.ExternalLogins?.Count ?? 0) == 0)
                            {
                                <div class="alert alert-warning text-center">
                                    <p>
                                        Aucun service d'authentification externe configuré. Consultez cet <a href="https://go.microsoft.com/fwlink/?LinkID=532715" target="_blank">
                                            article
                                            sur la configuration de cette application ASP.NET pour prendre en charge la connexion via des services externes
                                        </a>.
                                    </p>
                                </div>
                            }
                            else
                            {
                                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="text-center">
                                    <div class="d-grid gap-2">
                                        @foreach (var provider in Model.ExternalLogins!)
                                        {
                                            <button type="submit" class="btn btn-outline-primary btn-lg" name="provider" value="@provider.Name" title="Connectez-vous en utilisant votre compte @provider.DisplayName">@provider.DisplayName</button>
                                        }
                                    </div>
                                </form>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    /* Augmentation de la largeur des colonnes pour de plus grandes cartes */
    .col-md-10 {
        max-width: 80%; /* Modifie la largeur pour les écrans plus petits */
    }

    .col-lg-8 {
        max-width: 70%; /* Plus large pour les grands écrans */
    }

    .col-xl-6 {
        max-width: 60%; /* Largeur maximale des cartes */
    }

    /* Animation des boutons et transitions */
    .btn-primary {
        transition: background-color 0.3s, transform 0.2s;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            transform: translateY(-2px);
        }

    .btn-outline-primary {
        transition: transform 0.2s;
    }

        .btn-outline-primary:hover {
            transform: translateY(-2px);
        }

    /* Style du formulaire */
    .form-control:focus {
        border-color: #0056b3;
        box-shadow: 0 0 0 0.2rem rgba(38, 143, 255, 0.25);
    }

    .card {
        border-radius: 15px;
    }

    .container {
        max-width: 1200px;
    }
</style>
